<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <RelativeLayout
            android:id="@+id/fragment_video_contain_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <com.nepo.nepotransfered.view.circleview.SeekCircle
                android:id="@+id/fragment_video_seekCircle"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_centerInParent="true"
                 />
                <ImageView
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:background="@drawable/home_circle"
                    android:layout_centerInParent="true"
                    />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fragmen_video_num_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/transfer_num1"
                android:layout_width="40dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/transfer_num2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/transfer_num1" />

            <ImageView
                android:id="@+id/transfer_num3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/transfer_num2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/transfer_num3"
                android:text="部"
                android:textColor="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmen_video_num_rl"
            android:layout_centerInParent="true"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/transfer_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="等待传输"
                android:textColor="#C4D1E7"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/transfer_status_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/trans_ic_video" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>